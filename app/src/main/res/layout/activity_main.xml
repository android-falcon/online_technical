<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/MyActionBarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="@color/darkblue_1">

            <ImageView
                android:id="@+id/falcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/falconssoftlogo" />


            <TextView
                android:id="@+id/refresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/darkblue_1" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bac_list_1"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:text="@string/in_service"
                    android:textColor="@color/greenColor"
                    android:textSize="20sp"
                    android:fontFamily="@font/keania_one"
                     />
                    <TextView
                        android:id="@+id/countChickIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:layout_weight="0.8"
                        android:textColor="@color/greenColor"
                        android:textSize="20sp"
                        android:fontFamily="@font/keania_one"
                        />
                </LinearLayout>
                <ListView
                    android:id="@+id/listCheakIn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp" />





            </LinearLayout>

            <TextView

                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bac_list_2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:text="@string/out_service"
                        android:textColor="@color/darkblue_2"
                        android:textSize="20sp"
                        android:fontFamily="@font/keania_one" />
                    <TextView
                        android:id="@+id/countChickOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text=""
                        android:layout_weight="0.8"
                        android:textColor="@color/darkblue_2"
                        android:textSize="20sp"
                        android:fontFamily="@font/keania_one"
                        />
                </LinearLayout>


                <ListView
                    android:id="@+id/listCheakout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView

                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bac_list_3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/waite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:text="@string/waiting"
                        android:textColor="@color/falconColor"
                        android:textSize="20sp"
                        android:fontFamily="@font/keania_one" />
                    <TextView
                        android:id="@+id/countChickHold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text=""
                        android:layout_weight="0.8"
                        android:textColor="@color/falconColor"
                        android:textSize="20sp"
                        android:fontFamily="@font/keania_one"
                        />
                </LinearLayout>



                <ListView
                    android:id="@+id/hold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp" />
            </LinearLayout>


            <TextView
android:id="@+id/line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/scheduleLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bac_list_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/keania_one"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/Schedule"
                        android:textColor="@color/blueColor"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/countSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/keania_one"
                        android:gravity="start"
                        android:text="0"
                        android:textColor="@color/blueColor"
                        android:textSize="20sp" />
                </LinearLayout>


                <ListView
                    android:id="@+id/listSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/imageMove"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/countOfSchedule"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_marginEnd="0dp"
            android:layout_weight="0"
            android:background="@drawable/background_schdual"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white_dark"
            android:textSize="18sp" />
