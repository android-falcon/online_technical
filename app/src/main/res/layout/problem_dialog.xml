<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bac1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bac_list"
    android:orientation="vertical"
    android:padding="30dp">



    <LinearLayout
        android:id="@+id/bac2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="9"-->
            <!--app:srcCompat="@drawable/ic_person_add_black_24dp_white"-->
            <!--tools:ignore="VectorDrawableCompat" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/hold_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:tint="@color/darkblue_1"
                app:backgroundTint="@color/goldf"
                android:layout_gravity="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.994" />


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/problem"
            android:background="@drawable/button_f_"
            android:textColor="@color/white"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/holdEdit_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/stroke_f"
            android:fontFamily="serif"
            android:gravity="start"
            android:hint="@string/system_problem"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:padding="10dp"

            android:textColor="@color/darkblue_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintVertical_bias="0.0" />


    </LinearLayout>

</LinearLayout>