<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".reports.CallCenterTrackingReport"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/darkblue_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_center_report"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_weight="1"
        android:paddingVertical="5dp"
        android:fontFamily="@font/keania_one"
        android:padding="10dp"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:fontFamily="serif"
            android:gravity="end|center"
            android:paddingLeft="5dp"
            android:text="No"
            android:textAlignment="center"
            android:textColor="@color/goldf"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/infoTableReport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|top"
           android:layout_margin="10dp"
            android:layout_marginBottom="10dp"

            android:textAlignment="center"
            android:textColor="@color/goldf"

            android:layout_weight="0.01"
            android:textStyle="bold"

            android:background="@drawable/ic_info_outline_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="@string/from_date"

                android:textSize="15sp" />

            <!--<Spinner-->
            <!--android:id="@+id/callCenter_report_dateSpinner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/fromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="@string/to_date"

                android:textSize="15sp" />

            <!--<Spinner-->
            <!--android:id="@+id/callCenter_report_dateSpinner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/toDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="@string/call_center"

                android:textSize="15sp" />

            <Spinner
                android:id="@+id/callCenter_report_engSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="@string/eng"

                android:textSize="15sp" />

            <Spinner
                android:id="@+id/eng_report_dateSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="@string/system"

                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sys_report_dateSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>



            <LinearLayout
                android:id="@+id/linearCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:layout_weight="1.1"
                        android:paddingLeft="5dp"
                        android:text="@string/customer"


                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/callCenter_report_Customer"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/btnSpeakCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"

                        android:background="@drawable/ic_mic_black_24dp"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:textColor="@color/darkblue_1"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:paddingLeft="5dp"
                        android:text="@string/phone"

                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/callCenter_report_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="phone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:text="@string/company"

                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/eng_report_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/btnSpeakCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"

                        android:background="@drawable/ic_mic_black_24dp"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:textColor="@color/darkblue_1"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:background="@drawable/icon_f"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_search_black_24dp"
                        android:fontFamily="serif"
                        android:paddingLeft="5dp"
                        android:text="@string/search"
                        android:textColor="@color/white"
                        android:textSize="15sp" />


                </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TableRow
        android:background="@color/darkblue_1"
        android:padding="5dp"
        android:id="@+id/row_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/eng"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/system"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/problemOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/problem"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customerFilter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/customer"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/phone"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/company"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/CheckInTimeId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/check_in_time"
            android:drawableEnd="@drawable/ic_arrow_upward_black_24dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/CheckOutTimeId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:drawableEnd="@drawable/ic_arrow_upward_black_24dp"

            android:text="@string/check_out_time"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/HoldTimeId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_arrow_upward_black_24dp"

            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/hold"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center"
            android:text="@string/transaction_date"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </TableRow>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/callCenter_report_recyclerView"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"/>

</LinearLayout>