<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/grayf"
    android:id="@+id/online_cordinator_layout"
    tools:context=".TechnicalActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >

            <TextView
                android:id="@+id/technical_customers_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Customers Yet"
                android:gravity="center"
                android:fontFamily="@font/averia_libre_light"
                android:textSize="20sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/technical_customers_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/technical_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_hold"
                android:fontFamily="@font/keania_one"
                android:gravity="center"
                android:minWidth="200dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/goldf"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="5dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/white_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:background="@drawable/corner_frame"
                            android:fontFamily="@font/averia_libre_light"
                            android:textColor="@color/white"
                            android:paddingHorizontal="10dp"
                            android:text="@string/company"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/technical_company"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:background="@drawable/white_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:background="@drawable/corner_frame"
                            android:fontFamily="@font/averia_libre_light"
                            android:textColor="@color/white"
                            android:paddingHorizontal="10dp"
                            android:text="@string/customer"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/technical_customer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/white_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:background="@drawable/corner_frame"
                            android:fontFamily="@font/averia_libre_light"
                            android:textColor="@color/white"
                            android:paddingHorizontal="10dp"
                            android:text="@string/system"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/technical_system"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="5dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:background="@drawable/white_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:background="@drawable/corner_frame"
                            android:fontFamily="@font/averia_libre_light"
                            android:textColor="@color/white"
                            android:paddingHorizontal="10dp"
                            android:text="@string/phone"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/technical_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:background="@drawable/white_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:background="@drawable/corner_frame"
                            android:fontFamily="@font/averia_libre_light"
                            android:textColor="@color/white"
                            android:paddingHorizontal="10dp"
                            android:text="@string/problem"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/technical_problem"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/goldf"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5">

                    <EditText
                        android:id="@+id/technical_t_problem"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@null"
                        android:fontFamily="@font/averia_libre_light"
                        android:gravity="start"
                        android:hint="Customer problem ..."
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="15"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20sp"
                            android:src="@drawable/ic_check"
                            android:tint="@color/darkblue_1"
                            app:backgroundTint="@color/goldf" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/shadow">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/technical_visit_report"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/call_center_boy"
            app:civ_border_color="@color/darkblue_2"
            app:civ_border_width="1dp"
            android:layout_weight="0.7"
            android:padding="10dp"/>

        <ImageButton
            android:id="@+id/technical_add_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@null"
            android:src="@drawable/ic_baseline_add_photo" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".1"/>

        <ImageButton
            android:id="@+id/technical_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_baseline_check_gray"
            android:background="@null"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".8"/>

        <ImageButton
            android:id="@+id/technical_exist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@null"
            android:src="@drawable/ic_exit" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".1"/>

    </LinearLayout>

