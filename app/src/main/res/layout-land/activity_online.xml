    <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
        android:id="@+id/online_timer"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:m_arc_stroke_color="@color/darkblue_2"
        app:m_cicle_stroke_width="14"
        app:m_circle_radius="100"
        app:m_circle_stroke_color="@color/goldf"
        android:layout_marginLeft="70dp" />

    <EditText
        android:id="@+id/online_problem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/stroke_f"
        android:fontFamily="serif"
        android:gravity="start"
        android:hint="@string/system_problem"
        android:inputType="textMultiLine"
        android:minLines="14"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="350dp"
        android:layout_marginRight="16dp" />

    <RelativeLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/darkblue_1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/online_exit"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_exit"
            android:tint="@color/goldf" />

        <ImageView
            android:id="@+id/online_break"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/online_exit"
            android:layout_toRightOf="@id/online_exit"
            android:src="@drawable/ic_free_breakfast"
            android:tint="@color/goldf" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/online_settings"
            android:layout_width="63dp"
            android:layout_height="68dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/a_letter_f"
            app:civ_border_color="@color/greenf"
            app:civ_border_width="3dp" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/online_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_check"
        android:tint="@color/darkblue_1"
        app:backgroundTint="@color/goldf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994" />

    <LinearLayout
        android:id="@+id/online_customer_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/online_problem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/online_timer"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/online_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit_text_f"
            android:drawableStart="@drawable/ic_person"
            android:drawableLeft="@drawable/ic_person"
            android:drawableTint="@color/goldf"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="@string/customer"
            android:padding="15dp" />

        <TextView
            android:id="@+id/online_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/edit_text_f"
            android:drawableStart="@drawable/ic_call"
            android:drawableLeft="@drawable/ic_call"
            android:drawableTint="@color/goldf"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="@string/phone_number"
            android:padding="15dp" />

        <TextView
            android:id="@+id/online_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_text_f"
            android:drawableStart="@drawable/ic_desktop_window"
            android:drawableLeft="@drawable/ic_desktop_window"
            android:drawableTint="@color/goldf"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="@string/system"
            android:padding="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/online_new_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button_f"
        android:drawableStart="@drawable/ic_call"
        android:drawableLeft="@drawable/ic_call"
        android:drawablePadding="-50dp"
        android:drawableTint="@color/white"
        android:fontFamily="serif"
        android:paddingLeft="40dp"
        android:text="@string/new_customer"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/online_problem"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/online_image_customer"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>